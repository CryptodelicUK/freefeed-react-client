{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "babel",
    "import",
    "lodash",
    "promise",
    "you-dont-need-lodash-underscore"
  ],
  "extends": "eslint:recommended",
  "settings": {
    "import/ignore": [
      "node_modules"
    ]
  },
  "rules": {
    "curly": ["error", "all"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "keyword-spacing": ["error", {"before": true, "after": true}],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
